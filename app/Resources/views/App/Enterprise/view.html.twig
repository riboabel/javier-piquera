{% extends "frontend.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Empresa <small>ver datos</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    {% if enterprise is not empty %}
        <div class="row">
            <div class="col-lg-8 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        Datos de mi empresa
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-xs-12">
                                <strong>Nombre</strong><br>
                                {{ enterprise.name }}
                                <div class="help-block"></div>
                            </div>
                            <div class="col-xs-12">
                                <strong>Direcci√≥n postal</strong><br>
                                {{ enterprise.postalAddress }}
                                <div class="help-block"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-xs-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Logotipo</div>
                    <div class="panel-body">
                        {% if enterprise.logoName is not empty %}
                            <img src="{{ vich_uploader_asset(enterprise, 'logoFile') }}" alt="" class="img img-responsive img-thumbnail" style="width: 90%; margin: 10px auto;">
                        {% else %}
                            <div class="text-center" style="min-height: 60px; padding: auto;">Sin logotipo</div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <div class="actions">
                    <a href="{{ path("app_enterprise_edit") }}" class="btn btn-info">
                        <i class="glyphicon glyphicon-edit"></i>
                        Editar
                    </a>
                </div>
            </div>
        </div>
        <!-- /.row -->
    {% else %}
        <div class="row">
            <div class="col-xs-12">
                <div class="alert alert-warning">
                    No hay empresa creada. Debe <a href="{{ path('app_enterprise_edit') }}">crear</a> una
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

