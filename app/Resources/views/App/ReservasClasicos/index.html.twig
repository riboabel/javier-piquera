{% extends "frontend.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Reservas de clásicos <small>listado</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row" style="margin-bottom: 10px;">
        <div class="col-lg-12">
            <div class="pull-right">
                <a href="{{ path("app_reservasclasicos_new") }}" class="btn btn-success">
                    <i class="fa fa-plus-circle"></i>
                    Crear reserva para clásicos
                </a>
                <div class="btn-group">
                    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                        Herramientas
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu pull-right" role="menu">
                        <li>
                            <a href="javascript:;" role="button" id="link-select-all">
                                <i class="glyphicon glyphicon-check"></i>
                                Seleccionar todos
                            </a>
                        </li>
                        <li>
                            <a href="javascript:;" role="button" id="link-select-none">
                                <i class="glyphicon glyphicon-unchecked"></i>
                                Borrar selección
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="dataTable_wrapper">
        <table class="table table-striped table-bordered table-hover" id="dataTables-reservas" width="100%"></table>
    </div>
    <!-- /.table-responsive -->
{% endblock %}

{% block page_javascripts %}
    <script type="text/javascript">
        $(document).ready(function() {
            App.ReservasClasicos.Index.init();
        });
    </script>
{% endblock %}
