{% block phone %}
    {% if phone is not empty %}
        {{ phone|phone_number_format("NATIONAL") }}
    {% endif %}
{% endblock %}

{% block contact_info %}
    {{ record.contactInfo }}
{% endblock %}

{% block is_guide %}
    {% if record.isDriverGuide %}
        <div class="text-center"><span class="fa fa-check"></span></div>
    {% endif %}
{% endblock %}

{% block actions %}
    <div class="btn-group">
        <a href="{{ path("app_drivers_view", {id: record.id}) }}" class="btn btn-default btn-xs" title="Ver detalle"><i class="glyphicon glyphicon-file"></i></a>
        <a href="{{ path("app_drivers_edit", {id: record.id}) }}" class="btn btn-info btn-xs" title="Editar"><i class="glyphicon glyphicon-edit"></i></a>
        <a href="{{ path("app_drivers_delete", {id: record.id}) }}" class="btn btn-danger btn-xs btn-delete" title="Eliminar"><i class="glyphicon glyphicon-remove"></i></a>
    </div>
{% endblock %}
