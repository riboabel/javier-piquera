{% extends "frontend-requirejs.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Clientes <small>ver datos</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    <div class="row">
        <div class="col-lg-8 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Datos del cliente
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-4 col-xs-12">
                            <strong>Nombre</strong><br>
                            {{ record.name }}
                            <div class="help-block"></div>
                        </div>
                        <div class="col-lg-4 col-xs-12">
                            <strong>Código REEUP</strong><br>
                            {{ record.reeupCode }}
                            <div class="help-block"></div>
                        </div>
                        <div class="col-lg-4 col-xs-12">
                            <strong>Contrato</strong><br>
                            {{ record.contractNumber }}
                            <div class="help-block"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-xs-12">
                            <strong>Dirección postal</strong><br>
                            {{ record.postalAddress }}
                            <div class="help-block"></div>
                        </div>
                        <div class="col-lg-6 col-xs-12">
                            <strong>Información de contacto</strong><br>
                            {{ record.contactInfo }}
                            <div class="help-block"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-xs-12">
                            <div class="input-wrapper"><input type="checkbox" disabled{{ record.receiveserviceOrder ? ' checked="checked"' : '' }}><label for="">Recibe órdenes de trabajo</label></div>
                            <div class="help-block"></div>
                        </div>
                        <div class="col-lg-6 col-xs-12">
                            <div class="input-wrapper"><input type="checkbox" disabled{{ record.receiveInvoice ? ' checked': '' }}><label for="">Recibe facturas</label></div>
                            <div class="help-block"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Datos del facturación</h3>
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        <strong>Siguiente número de factura</strong><br>
                        {{ record.lastInvoiceAutoIncrementValue|default('--') }}
                        <div class="help-block">Aparece en las facturas</div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.col-lg-8.col-xs-12 -->
        <div class="col-lg-4 col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">Logotipo</div>
                <div class="panel-body">
                    {% if record.logoName is not empty %}
                        <img src="{{ vich_uploader_asset(record, "logoFile") }}" alt="logotipo" class="img img-responsive img-thumbnail" style="width: 90%;">
                    {% else %}
                        <div class="text-center">Sin logotipo</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="actions">
                <a href="{{ path("app_providers_edit", {"id": record.id}) }}" class="btn btn-success">
                    <i class="glyphicon glyphicon-edit"></i>
                    Editar
                </a>
                <a href="{{ path("app_providers_index") }}" class="btn btn-default">
                    <i class="fa fa-tables"></i>
                    Ir al listado
                </a>
            </div>
        </div>
    </div>
    <!-- /.row -->
{% endblock %}
