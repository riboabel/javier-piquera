{% extends "frontend-requirejs.html.twig" %}

{% form_theme form "App/Providers/form.html.twig" %}

{% block page_content %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Clientes <small>editar</small></h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->

    {{ form_start(form, {action: path("app_providers_update", {id: form.vars.data.id}), attr: {role: "form", id: "provider"}}) }}
        <div class="row">
            <div class="col-lg-12">
                {{ form_row(form) }}
                <button class="btn btn-success" type="submit">
                    <i class="fa fa-save"></i>
                    Guardar
                </button>
                <a href="{{ path("app_providers_index") }}" class="btn btn-default">
                    <i class="fa fa-undo"></i>
                    Cancelar
                </a>
            </div>
        </div>
        <!-- /.row -->
    {{ form_end(form) }}
{% endblock %}

{% block page_javascripts %}
    <script>
        require([
            'js/form-provider'
        ], function(initApp) {
            'use strict';

            initApp();
        });
    </script>
{% endblock %}
